;Assembly code by Alifian

ORG 00H
    MOVE TMOD, #01H	; TIMER 0
    AGAIN:
    SETB P1.0		; TURN DCMOTOR OFF
    ACALL DELAY		; CALL FOR DELAY
    CLR P1.0		; TURN DCMOTOR ON
    ACALL DELAY
    SJMP AGAIN 		; DO AGAIN
    
    DELAY:
    MOV R0,#8		; 1200 LOOP NUMBER 
    REPEAT:
    MOV THO, #00H
    MOVE TLO,#00H
    SETB TRO		; START TIMER
    STAY:
    JNB TF0, STAY	; WAITS FOR TIME TO COMPLETE ITS COUNT 
    CLR TR0 		; WHEN DONE.. STOP THE TIMER 
    CLR TF0		
    DJNZ RO,REPEAT 	; RUN TIMER 100 TIMER 
    RET 		; GO BACK TO CALLING FUNCION AGAIN
    END
    
;	
